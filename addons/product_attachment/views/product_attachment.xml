<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tree_product_attachment" model="ir.ui.view">
        <field name="name">product.attachment.tree</field>
        <field name="model">product.attachment</field>
        <field name="arch" type="xml">
            <tree string="Attachment">
                <field name="attachment" filename="filename"/>
                <field name="filename"/>
            </tree>
        </field>
    </record>

    <record id="form_product_attachment" model="ir.ui.view">
        <field name="name">product.attachment.form</field>
        <field name="model">product.attachment</field>
        <field name="arch" type="xml">
            <form string="Attachment">
                <group>
                    <field name="product_id"/>
                    <field name="attachment" filename="filename"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
